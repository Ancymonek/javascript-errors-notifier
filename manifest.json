{
	"name": "JavaScript Errors Notifier",
	"short_name": "js_error",
	"description": "Notifies JavaScript errors by icon in address bar or notification popup(optional)",
	"version": "2.2.5",
	"manifest_version": 2,
	"background": {
		"scripts": [
			"notifications.js",
			"background.js"
		]
	},
	"content_scripts": [
		{
			"all_frames": true,
			"js": ["content.js"],
			"matches": [
				"http://*/*",
				"https://*/*",
				"file://*/*"
			],
			"run_at": "document_start"
		}
	],
	"options_page": "options.html",
	"icons": {
		"128": "img/logo_128.png",
		"16": "img/error_16.png",
		"48": "img/logo_48.png"
	},
	"incognito": "spanning",
	"page_action": {
		"default_icon": {
			"19": "img/error_19_disabled.png",
			"38": "img/error_38_disabled.png"
		},
		"default_popup": "popup.html"
	},
	"permissions": [
		"<all_urls>",
		"tabs",
		"notifications",
		"storage",
		"webRequest"
	]
}
